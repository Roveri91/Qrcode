<%= turbo_frame_tag "modal" do %>

  <div id="form" class="container">
    <div class="card mt-5">
      <%#= form_with model: @profile do |f| %>
      <%= simple_form_for @article do |f| %>
        <%= f.input :title %>
        <%= f.input :content %>
        <%= f.button :submit %>
      <% end %>
    </div>
    <p><%= link_to "Cancel", "#", data: {
      controller: "modals",
      action: "modals#close",
    }   %></p>
  </div>
<% end %>
