<div class="card m-2 p-3">
  <h3><%= @article.title %></h3>
  <h5>written by <%= @article.profile.name %> <%= @article.profile.surname %></h5>
  <p><%= @article.content %></p>
  <%= link_to "Back", :root  %>
</div>

<% if @article.comments.exists? %>
  <div class="card m-2 p-3">
    <h4>Comments</h4>
    <% @article.comments.each do |comment| %>
      <p><strong><%= comment.profile.fullname %>:  </strong><span><%= comment.content %></span></p>
    <% end %>

    <%= link_to "New Comment", new_profile_article_comment_path(@profile,@article) %>

  </div>

<% end %>
