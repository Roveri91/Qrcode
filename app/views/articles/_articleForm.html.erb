<%= turbo_frame_tag "article_form" do %>

  <div id="article-form" class="container">
      <div class="card mt-5">
        <%#= form_with model: @profile do |f| %>
        <%= simple_form_for @profile do |f| %>
          <%= f.input :name %>
          <%= f.input :surname %>
          <%= f.input :linkedln %>
          <%= f.input :birthday, as: :date, start_year: Date.today.year - 100, end_year: Date.today.year %>
          <%= f.button :submit %>
        <% end %>
      </div>
      <p><%= link_to "Cancel", "#", data: {
        controller: "modals",
        action: "modals#close",
      }   %></p>
  </div>

<% end %>
